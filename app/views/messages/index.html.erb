<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
  
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-success"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

<%= form_for(@message, html: {class:"form-horizontal",role:"form"}) do |f| %>
  <div class="form-group">
    <label for="message_name" class="col-sm-1 control-label">名前:</label>
    <div class="col-sm-11">
      <%= f.text_field :name, class: "form-control", id:"message_name", placeholder: "お名前" %>
    </div>
  </div>
  
  <div class="form-group">
    <label for="message_body" class="col-sm-1 control-label">内容:</label>
    <div class="col-sm-11">
      <%= f.text_area :body, class: "form-control", id:"message_body", placeholder: "メッセージを記入" %>
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-sm-offset-1 col-sm-11">
      <%= f.submit class: "btn btn-sm btn-danger btn-block" %>
    </div>
  </div>
<% end %>